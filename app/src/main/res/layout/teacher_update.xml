<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rafyee.rafyee_rajiv.pstuprofile.TeacherProfile.TeacherUpdate">

    <View
        android:id="@+id/topView"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/teacherUpdate_backButton"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/left_arrow"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/bensen_handwriting"
            android:text="@string/teacherUpdate_teacherUpdate"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/teacherUpdate_backButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_illustration_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/teacherUpdate_nameTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/teacherUpdate_teacherName"
        android:fontFamily="@font/kalpurush"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:id="@+id/teacherUpdate_newName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/just_border"
        android:drawableLeft="@drawable/person_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/colorText"
        android:elevation="3dp"
        android:ems="10"
        android:fontFamily="@font/kalpurush"
        android:hint="@string/teacherUpdate_teacherName"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/kalpurush"
        android:text="@string/teacherUpdate_selectDesignation"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/teacherUpdate_newName"
        app:layout_constraintTop_toBottomOf="@+id/teacherUpdate_newName" />

    <Spinner
        android:id="@+id/teacherUpdate_newPost"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/just_border"
        android:fontFamily="@font/kalpurush"
        android:textStyle="bold"
        android:elevation="3dp"
        android:layout_marginTop="8dp"
        android:entries="@array/posts"
        app:layout_constraintEnd_toEndOf="@+id/teacherUpdate_newName"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/teacherUpdate_newPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/just_border"
        android:drawableLeft="@drawable/lock_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/colorText"
        android:elevation="3dp"
        android:ems="10"
        android:fontFamily="@font/kalpurush"
        android:hint="@string/teacherUpdate_newPassword"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/teacherUpdate_newPost"
        app:layout_constraintStart_toStartOf="@+id/teacherUpdate_newPost"
        app:layout_constraintTop_toBottomOf="@+id/teacherUpdate_newPost" />

    <EditText
        android:id="@+id/teacherUpdate_newContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/just_border"
        android:drawableLeft="@drawable/android_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/colorText"
        android:elevation="3dp"
        android:ems="10"
        android:fontFamily="@font/kalpurush"
        android:hint="@string/tacherUpdate_newContactNo"
        android:inputType="phone"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/teacherUpdate_newPassword"
        app:layout_constraintStart_toStartOf="@+id/teacherUpdate_newPassword"
        app:layout_constraintTop_toBottomOf="@+id/teacherUpdate_newPassword" />

    <LinearLayout
        android:id="@+id/teacherUpdate_updateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/amber_primary_dark"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherUpdate_newContact">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:src="@drawable/update"
            android:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bensen_handwriting"
            android:gravity="center"
            android:text="@string/teacherUpdate_update"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>